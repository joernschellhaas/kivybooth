#:kivy 2.0.0

CountdownScreen:
    name: 'Countdown'

    AdaptiveBoxLayout:
        orientation: 'vertical'

        Label:
            text: "Get ready..."
            font_size: 60

        Label:
            id: counter_widget
            font_size: 160
            size_hint_y: 0.5

        KBButton:
            text: 'Abort'
            on_release: app.go_to_screen("idle")  
