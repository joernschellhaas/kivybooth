#:kivy 2.0.0
#:import _ i18n._
#:import Direction base.Direction

ReviewScreen:
    name: _('Dein Foto')

    BoxLayout:
        orientation: 'vertical'
#        canvas:
#            Color:
#                rgba: 1, 1, 1, 0.5
#            Rectangle:
#                pos: self.x, self.y
#                size: self.width, self.height

        Image:
            id: photo

        ButtonBar:

            AnchorLayout:
                anchor_x: 'left'
                size_hint_y: None
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    #Switch:
                    #    id: store_allowed
                    #    active: True
                    #    size_hint_x: None
                    #    size_hint_y: None
                    Label:
                        text_size: self.size
                        valign: 'middle'
                        text: _("Bild wurde gespeichert.")
                        size_hint_y: None
                
            AnchorLayout:
                anchor_x: 'right'
                size_hint_y: None
                ResizingCol_GridLayout:
                    KBIconButton:
                        text: _("Nicht drucken")
                        icon: "times-circle"
                        on_release: app.go_to_screen("idle", Direction.BACK)
                        default: True 
                    KBIconButton:
                        text: _("Drucken")
                        icon: "print"
                        default: True
                        on_release: app.go_to_screen("printing")  
