#:kivy 2.0.0
#:import _ i18n._

PrintingScreen:
    name: _('Drucken')
    
    AdaptiveBoxLayout:
        orientation: 'vertical'

        Label:
            text: _("Bild wird gedruckt...")
            font_size: 60

#       Label:
#           text: icon("print")
#           font_size: 160
#           size_hint_y: 0.5
#
        ProgressBar:
            id: progress_bar
            max: 100

        Label:
            text: _("Wenn das Bild fertig ist, kannst du es auf der Rückseite entnehmen.")

        KBIconButton:
            text: _("Nächstes Foto aufnehmen")
            icon: "camera"
            default: True
            on_release: app.go_to_screen("countdown")  